<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tam.a14customcoponents.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Size Width"
            android:id="@+id/edt_sizeWidth"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Size Height"
            android:id="@+id/edt_sizeHeight"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Draw Rectagle"
        android:id="@+id/btn_draw"/>
    <view
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/view"
        android:layout_marginTop="30dp"
        class="com.example.tam.a14customcoponents.CustomView"></view>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/paint"
            android:background="#FF009900"
            android:tag="#FF009900"
            android:id="@+id/imbtn_gred"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/imbtn_red"
            android:src="@drawable/paint"
            android:background="#fd0112"
            android:tag="#fd0112"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/paint"
            android:background="#FFFFCC00"
            android:tag="#FFFFCC00"
            android:id="@+id/imbtn_yellow"
            />
    </LinearLayout>

</LinearLayout>
